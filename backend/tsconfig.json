{
  "compilerOptions": {
    /* ===== Output and File Structure ===== */
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",

    /* ===== Module Resolution ===== */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* ===== Strictness ===== */
    "strict": true,
    "skipLibCheck": true,

    /* ===== Source Maps ===== */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}